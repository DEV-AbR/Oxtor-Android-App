<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_home"
        tools:context=".Fragments.ParentFragments.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/swipe_home">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_fileitem" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_side"
                android:layout_gravity="end|bottom"
                android:paddingBottom="@dimen/margin">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    app:fabSize="normal"
                    android:layout_marginStart="@dimen/margin"
                    android:visibility="invisible"
                    android:tooltipText="@string/add_image"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    android:layout_gravity="end|bottom" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    app:fabSize="normal"
                    android:layout_marginStart="@dimen/margin"
                    android:visibility="invisible"
                    android:tooltipText="@string/add_files"
                    android:src="@drawable/ic_baseline_file_present_24"
                    android:layout_gravity="end|bottom" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    app:elevation="0dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_gravity="end|bottom"
                    />

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>