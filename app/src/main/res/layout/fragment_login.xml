<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_login"
        android:background="@drawable/side_nav_bar"
        tools:context=".Fragments.ParentFragments.LoginFragment"
        android:clickable="true"
        android:fitsSystemWindows="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="80dp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/ic_launcher_background"
                android:src="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="@dimen/margin">


            <com.google.android.gms.common.SignInButton
                android:id="@+id/googlesigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonSize="wide"
                app:colorScheme="dark"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_sign_in_layout"
                android:layout_below="@id/googlesigin"
                android:layout_margin="4dp"
                app:cardBackgroundColor="?attr/colorSecondary"
                app:cardElevation="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardElevation="0dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/phonesignin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnPrimary"
                        android:text="@string/sign_in_with_phone"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorPrimaryVariant" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_sign_in_layout"
                app:cardBackgroundColor="?attr/colorSecondary"
                android:layout_margin="4dp"
                app:cardElevation="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardElevation="0dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/emailsignin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnPrimary"
                        android:text="@string/sign_in_with_email"
                        android:textAllCaps="false"
                        android:padding="4dp"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:layout_alignStart="@id/phone_sign_in_layout"
                        android:layout_alignEnd="@id/phone_sign_in_layout" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>