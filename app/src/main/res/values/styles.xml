<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Oxtor.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">

        <item name="itemPadding">4dp</item>
    </style>

    <style name="Theme.Oxtor.PopUpOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="shapeAppearanceOverlay">@style/dialogAppearance</item>
    </style>

    <style name="Theme.Oxtor.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="shapeAppearanceOverlay">@style/dialogAppearance</item>
    </style>


    <style name="Theme.Oxtor.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/dialogAppearance</item>

    </style>
    <style name="Theme.Oxtor.ProgressDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/dialogAppearance</item>

    </style>

    <style name="Theme.Oxtor.BottomSheetStyle" parent="ThemeOverlay.Material3.BottomSheetDialog">>
        <item name="shapeAppearanceOverlay">@style/dialogAppearance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialogAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_dialog</item>
    </style>

    <style name="Theme.Oxtor.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogStyle">@style/Theme.Oxtor.AlertDialog</item>
        <item name="android:popupMenuStyle">@style/Theme.Oxtor.PopupMenu</item>
        <item name="actionModeTheme">@style/Theme.Oxtor.AppBarOverlay</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:actionBarTheme">@style/Theme.Oxtor.AppBarOverlay</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Oxtor.BottomSheetStyle</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
    </style>

</resources>